  <div class="tableCon">
    <table>
    <thead>
      <tr>
        <th>EMP ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Joining</th>
        <th>Date of Birth</th>
        <th>Department</th>
        <th>Location</th>
        <th>Emp Email</th>
        <th>Emp Phone No</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach(employee => { %>
        <tr>
          <td><%= employee.EMPID %></td>
          <td><%= employee.FName %></td>
          <td><%= employee.LName %></td>
          <td><%= employee.DOJ %></td>
          <td><%= employee.DOB %></td>
          <td><%= employee.Dept %></td>
          <td><%= employee.Loc %></td>
          <td><%= employee.Email %></td>
          <td><%= employee.PHNO %></td>
          <td>
            <form action="/edit" method="POST" style="display:inline;">
              <input type="hidden" name="empId" value="<%= employee.EMPID %>">
              <button type="submit" class="action" >Edit</button>
            </form>
            <form action="/delete" method="POST" style="display:inline;">
              <input type="hidden" name="empId" value="<%= employee.EMPID %>">
              <button type="submit" class="action" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>